# YouTube API Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:8080/oauth2callback

# Gemini AI Configuration
# Get API key from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
# For SQLite (default): sqlite:///./youtube_analytics.db
# For PostgreSQL: postgresql://username:password@localhost:5432/youtube_analytics
DATABASE_URL=sqlite:///./youtube_analytics.db

# Application Configuration
APP_SECRET_KEY=your_secret_key_for_encryption_here
DEBUG=False
LOG_LEVEL=INFO

# Rate Limiting Configuration
YOUTUBE_API_QUOTA_LIMIT=10000
GEMINI_API_RATE_LIMIT=60

# Scheduling Configuration
AUTO_REFRESH_ENABLED=False
AUTO_REFRESH_INTERVAL_HOURS=24

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000